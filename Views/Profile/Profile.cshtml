@model DriveIn.Models.Domain.Profile
@{
    ViewData["Title"] = "Home Page";
}

<!-- Body  -->
<section class="bg-md-image text-light p-5" style="background-image: url('/images/cover.jpg'); height: 100vh">
    @if(Model!=null)
    { 
    <div id="profile-div">
        <div class="container-fluid d-flex flex-column align-items-center align-items-md-start">
            <div class="p-4">
                <div class="card bg-transparent text-white" style="width: 23rem;">
                    <div class="card-body border border-white">
                        <h5 class="card-title text-center">
                            Driver Licence Details
                            <a class="text-white" href="" onclick="showEditForm(event)">
                                <i class="ps-4 bi-pencil-square"></i>
                            </a>
                        </h5>
                        <div class="container-fluid row align-items-center p-2">
                            <div class="col">
                                <h6>Name:</h6>
                            </div>
                            <div class="col">
                                <h6>@Model.Name</h6>
                            </div>
                        </div>
                        <div class="container-fluid row align-items-center p-2">
                            <div class="col">
                                <h6>Address:</h6>
                            </div>
                            <div class="col">
                                <h6>@Model.Address</h6>
                            </div>
                        </div>
                        <div class="container-fluid row align-items-center p-2">
                            <div class="col">
                                <h6>Phone:</h6>
                            </div>
                            <div class="col">
                                <h6>@Model.Phone</h6>
                            </div>
                        </div>
                        <div class="container-fluid row align-items-center p-2">
                            <div class="col">
                                <h6>Licence No:</h6>
                            </div>
                            <div class="col">
                                <h6>@Model.LicenceNumber</h6>
                            </div>
                        </div>
                        <div class="container-fluid row align-items-center p-2">
                            <div class="col">
                                <h6>Issue:</h6>
                            </div>
                            <div class="col">
                                <h6>@Model.Issue</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    <div id="edit-form-container" style="display:none">
        <div class="container-fluid d-flex flex-column align-items-center align-items-md-start">
            <div class="p-4">
                <div class="card bg-white text-dark" style="width: 23rem;">
                    <div class="card-body">
                        <h5 class="card-title"><a class="text-dark" href=""><i class="bi bi-arrow-left-circle-fill"></i></a><span class="ps-10">Edit</span></h5>
                        <form asp-controller="Profile" asp-action="Profile" method="post">
                            <input type="hidden" asp-for="Id"/>
                            <div class="form-group pb-3">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" type="text" class="form-control" placeholder=@Model.Name>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group pb-3">
                                <label asp-for="Address">Address</label>
                                <input asp-for="Address" type="text" class="form-control" placeholder=@Model.Address>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group pb-3">
                                <label asp-for="Phone">Phone</label>
                                <input asp-for="Phone" type="text" class="form-control" placeholder=@Model.Phone>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group pb-3">
                                <label asp-for="LicenceNumber">Licence Number</label>
                                <input asp-for="LicenceNumber" type="text" class="form-control" placeholder=@Model.LicenceNumber>
                                <span asp-validation-for="LicenceNumber" class="text-danger"></span>
                            </div>  
                            <div class="form-group pb-4">
                                <label asp-for="Issue">Issue District</label>
                                <input asp-for="Issue" class="form-control" id="EditIssue" placeholder=@Model.Issue>
                                <span asp-validation-for="Issue" class="text-danger"></span>
                            </div>                        
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
        .ps-10 {
          padding-left: 125px;
        }
</style>
<script>
function showEditForm(event) {
    event.preventDefault(); // prevent link from reloading page
    $('#profile-div').hide();
    $('#edit-form-container').show();
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
